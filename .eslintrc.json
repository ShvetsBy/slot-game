{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb", 
        "airbnb/hooks",
        "plugin:react/recommended",
        "airbnb-typescript"
    ],
    "overrides": [],
    
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension":  "off",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "import/prefer-default-export": "off"
      }
}
